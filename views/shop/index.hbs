{{# each products}}

<div class="row">

{{#each this }}

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail " >
                <img src="{{this.imagePath}}" class="img-responsive" alt="...">
                <div class="caption">
                    <h3>{{this.title}}</h3>
                    <p class="description">{{this.description}} </p>
                    <div class="price">${{this.price}}</div>
                    <p class="text-right"><a href="#" class="btn btn-success " role="button">Add to Shopping Cart</a></p>

                </div>
            </div>
        </div>

{{/each}}
</div>
{{/each}}



